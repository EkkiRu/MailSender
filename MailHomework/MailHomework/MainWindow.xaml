<Window x:Class="MailHomework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailHomework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Куда" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Mail" HorizontalAlignment="Left" Margin="63,18,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Тема" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Theme" HorizontalAlignment="Left" Margin="63,61,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Сообщение" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>
        <RichTextBox Margin="10,126,10,10" >
            <FlowDocument>
                <Paragraph>
                    <Run Text="" Name="TextMessage"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="692,101,0,0" VerticalAlignment="Top" Width="98" Click="Send"/>

    </Grid>
</Window>
